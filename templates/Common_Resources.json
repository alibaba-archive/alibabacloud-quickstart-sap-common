    "Resources": {
        "ActionTrail": {
            "Type": "ALIYUN::ACTIONTRAIL::Trail",
            "Condition": "CreateActionTrailCondition",
            "Properties": {
                "OssBucketName": {
                    "Ref": "ActionTrailOssBucketName"
                },
                "Name": {
                    "Fn::Join": [
                        "-",
                        [
                            "SAP-ActionTrail",
                            {
                                "Fn::Select": [
                                    "0",
                                    {
                                        "Fn::Split": [
                                            "-",
                                            {
                                                "Ref": "ALIYUN::StackId"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    ]
                },
                "RoleName": {
                    "Fn::GetAtt": [
                        "ActionTrailRole",
                        "RoleName"
                    ]
                }
            }
        },
        "ActionTrailLogging": {
            "Type": "ALIYUN::ACTIONTRAIL::TrailLogging",
            "Condition": "CreateActionTrailCondition",
            "Properties": {
                "Name": {
                    "Fn::GetAtt": [
                        "ActionTrail",
                        "Name"
                    ]
                },
                "Enable": true
            }
        },
        "ActionTrailRole": {
            "Type": "ALIYUN::RAM::Role",
            "Condition": "CreateActionTrailCondition",
            "Properties": {
                "RoleName": {
                    "Fn::Join": [
                        "",
                        [
                            "SAPActionTrailRole-",
                            {
                                "Ref": "ALIYUN::StackId"
                            }
                        ]
                    ]
                },
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": "sts:AssumeRole",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "actiontrail.aliyuncs.com"
                                ]
                            }
                        }
                    ],
                    "Version": "1"
                },
                "Policies": [
                    {
                        "PolicyName": {
                            "Fn::Join": [
                                "",
                                [
                                    "SAPActionTrailRolePolicy-",
                                    {
                                        "Ref": "ALIYUN::StackId"
                                    }
                                ]
                            ]
                        },
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "oss:*"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "*"
                                    ]
                                },
                                {
                                    "Action": [
                                        "actiontrail:*"
                                    ],
                                    "Resource": [
                                        "*"
                                    ],
                                    "Effect": "Allow"
                                }
                            ],
                            "Version": "1"
                        }
                    }
                ]
            }
        },
        "WindowsRDP": {
            "Type": "ALIYUN::ECS::Instance",
            "Condition": "CreateWindowsRDPCondition",
            "Properties": {
                "HostName": {
                    "Ref": "WindowsRDPHostname"
                },
                "SystemDiskSize": "100",
                "SystemDiskCategory": {
                    "Ref": "SystemDiskCategory"
                },
                "IoOptimized": "optimized",
                "ImageId": {
                    "Fn::FindInMap": [
                        "WinImageMap",
                        "zh",
                        {
                            "Ref": "WindowsRDPImageId"
                        }
                    ]
                },
                "SecurityGroupId": {
                    "Fn::GetAtt": [
                        "WindowsRDPSecurityGroup",
                        "SecurityGroupId"
                    ]
                },
                "Password": {
                    "Ref": "LoginPassword"
                },
                "AllocatePublicIP": "true",
                "VSwitchId": {
                    "Ref": "VSwitchId"
                },
                "VpcId": {
                    "Ref": "VpcId"
                },
                "InstanceType": {
                    "Fn::FindInMap": [
                        "InstanceTypeMap",
                        {
                            "Ref": "WindowsRDPInstanceType"
                        },
                        "InstanceTypeId"
                    ]
                },
                "DiskMappings": [
                    {
                        "Category": "cloud_essd",
                        "Size": "400"
                    }
                ]
            }
        },
        "WindowsRDPSecurityGroup": {
            "Type": "ALIYUN::ECS::SecurityGroup",
            "Condition": "CreateWindowsRDPCondition",
            "Properties": {
                "VpcId": {
                    "Ref": "VpcId"
                },
                "SecurityGroupName": "WindowsRDP_sg",
                "SecurityGroupIngress": [
                    {
                        "PortRange": "3389/3389",
                        "Priority": 1,
                        "SourceCidrIp": "0.0.0.0/0",
                        "IpProtocol": "tcp",
                        "NicType": "intranet"
                    }
                ]
            }
        }
    },
    "Outputs": {
        "WindowsRDPPublicIP": {
            "Condition": "CreateWindowsRDPCondition",
            "Value": {
                "Fn::GetAtt": [
                    "WindowsRDP",
                    "PublicIp"
                ]
            }
        }
    }
